{
  "extends": "@tsconfig/node22/tsconfig.json",
    "compilerOptions": {
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": true,
    "resolveJsonModule":true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "tools/**/*",
    "prompts/**/*",
    "utils/**/*",
    "outputs/**/*",
    "server.ts",
    "server-stdio.ts",
    "taskManager.ts",
    "manifest.json",
    "README.md",
    "package.json",
    "LICENSE"
  ],
  "exclude": ["node_modules"]
}
